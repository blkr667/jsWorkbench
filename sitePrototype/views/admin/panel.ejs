               <div class="form-group">
                    <label for="message">Message</label>
                    <input type="text" class="form-control" id="message" name="message" value=<%= indexContent.message%>>
                </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-sm">Change data</button>
               </div>
           </form>
        </div>
     </div>
